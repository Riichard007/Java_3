<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <display-name>Amil</display-name>
    <servlet>
        <servlet-name>Servilleta</servlet-name>
        <servlet-class>com.unitec.amil.ServletAutenticar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletRecomendarBebidas</servlet-name>
        <servlet-class>unitec.bebidas.controller.ServletRecomendarBebidas</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletGuardarUsuario</servlet-name>
        <servlet-class>com.unitec.amil.ServletGuardarUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletHola</servlet-name>
        <servlet-class>com.unitec.amil.ServletHola</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletBuscarTodosUsuarios</servlet-name>
        <servlet-class>com.unitec.amil.ServletBuscarTodosUsuarios</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Servilleta</servlet-name>
        <url-pattern>/autenticar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletRecomendarBebidas</servlet-name>
        <url-pattern>/recomendar</url-pattern>
        <url-pattern>/recomendacion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletGuardarUsuario</servlet-name>
        <url-pattern>/guardar-usuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletHola</servlet-name>
        <url-pattern>/hola</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletBuscarTodosUsuarios</servlet-name>
        <url-pattern>/usuarios</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
